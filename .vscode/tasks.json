{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build with Clang"
    }
  ]
}
